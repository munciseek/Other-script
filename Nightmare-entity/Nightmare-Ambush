while true do
local randomWaitTime = math.random(100, 150)
wait(randomWaitTime)
coroutine.wrap(function()
        while true do
        end
        end)        
        local random = math.random(1,100)
        print("实体：Nightmare Ambush 随机数：",random)
        if random >= 75 and random <= 100 then        
        ---====== 实体生成器 ======---

local spawner = loadstring(game:HttpGet("https://raw.githubusercontent.com/RegularVynixu/Utilities/main/Doors/Entity%20Spawner/V2/Source.lua"))()

---====== 创建实体 ======---

local entity = spawner.Create({
	Entity = {
		Name = "Nightmare Ambush",
		Asset = "https://raw.githubusercontent.com/munciseek/DOORS-entity-models/main/Nightmare/Nightmare-Ambush.rbxm",
		HeightOffset = 0
	},
	Lights = {  --闪灯
		Flicker = {
			Enabled = false,  --(true/false)true为开启闪灯,false为关闭闪灯
			Duration = 1  --闪灯时间
		},
		Shatter = true,  --(true/false)true为实体可以破坏灯,false为实体不能泼猴灯
		Repair = false  --(true/false)true恢复灯光,false禁用恢复灯光
	},
	CameraShake = {  --屏幕抖动
		Enabled = true,   --(true/false)true启用屏幕抖动,false为禁用屏幕抖动
		Range = 100,  --抖动范围
		Values = {3, 1.5, 0.1, 8} -- 从左到右为等级, 粗糙度, 渐显, 渐隐
	},
	Movement = {  --移动设置
		Speed = 1000,  --实体速度
		Delay = 5,  --移动前的延迟
		Reversed = false  --(true/false) true为前方来,false为后方来
	},
	Rebounding = {  --回弹
		Enabled = true,  --(true/false)启动为可以回弹,false为不回弹
		Type = "Ambush", --(Ambush/Blitz) 回弹方式
		Min = 8,  --最少回弹次数
		Max = 10,  --最大回弹次数
		Delay = 0  --回弹之前的延迟
	},
	Damage = {  --伤害
		Enabled = true,  --(true/false) true 为开启实体伤害,false为关闭实体伤害
		Range = 100,  --实体范围
		Amount = 100  --实体伤害
	},
	Crucifixion = {  --封印
		Enabled = true,  --(true/false) true可以被翻译,false不可被封印
		Range = 40,  --封印范围
		Resist = false,  --(true/false) true可以被抵制,false不可被抵制
		Break = true  --(true/false) true可以被破坏,false不可被破坏
	},
	Death = {  --死亡
		Type = "Guiding", --(Guiding/Curious)引导之光或好奇之光
		Hints = {"You died to Nightmare Ambush", "It's different from a normal ambush", "It's red and  so fast", "But the hiding is still the same"},
		Cause = ""  --原因(可选)
	}
})

---====== 调试实体 ======---
entity:SetCallback("OnDespawned", function()
    local player = game.Players.LocalPlayer
        local humanoid = player.Character and player.Character:FindFirstChild("Humanoid")
        if humanoid then
        if humanoid.Health > 0 then
        local achievementGiver = loadstring(game:HttpGet("https://raw.githubusercontent.com/RegularVynixu/Utilities/main/Doors/Custom%20Achievements/Source.lua"))()
        
        achievementGiver({
            Title = "again & again & again",
            Desc = "Coming back for more!",
            Reason = "Successfully survive Nightmare Ambush",
            Image = "rbxassetid://17692115583"
        })
            end
        end
end)

---====== 运行实体 ======---

entity:Run()
break
end 
end 

